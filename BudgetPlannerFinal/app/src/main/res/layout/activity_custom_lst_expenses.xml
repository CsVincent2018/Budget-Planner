<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vincent.budgetplannerfinal.CustomLstExpenses">

   <LinearLayout

       android:layout_marginTop="5dp"
       android:id ="@+id/lnr1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <ImageView
           android:id="@+id/imgPICCONT"
           android:layout_width="80dp"
           android:layout_height="80dp"
           android:layout_marginTop="5dp"
           android:layout_marginLeft="10dp"
           android:textSize = "20sp"
           android:background="@mipmap/exp" />
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="match_parent">
       <TextView
           android:id = "@+id/txtexptitle"
           android:hint="Title Exp:"
           android:layout_marginTop="15dp"
           android:layout_marginLeft="10dp"
           android:fontFamily="monospace"
           android:textSize="20sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
           android:layout_height="match_parent">
           <TextView
               android:id = "@+id/txtexpcat"
               android:hint="Exp category"
               android:layout_below="@id/txtexptitle"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"
               android:fontFamily="casual"
               android:textSize="15sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/txtexpid"
               android:textSize="11sp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:layout_below="@id/txtexpcat"
               android:id="@+id/txtclstblnc"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>

       <RelativeLayout
           android:layout_marginTop="10dp"
           android:id = "@+id/rltvlyt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="10dp"
           android:layout_marginLeft="2dp">
           <TextView
               android:hint ="2017-12-12"
               android:layout_alignParentRight="true"
               android:id="@+id/txtexpdt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:textSize="20sp"
               android:textColor="#4d95d9"
               android:fontFamily="monospace"
               android:textStyle="bold"
               android:layout_below="@id/txtexpdt"
               android:hint ="50.00"
               android:layout_alignParentRight="true"
               android:id="@+id/txtexpcost"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </RelativeLayout>
   </LinearLayout>
    <TextView
        android:id="@+id/lblFOOTERMAIN"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/lnr1"
        android:background="#5a5656"
        android:layout_marginTop="10dp" />
</RelativeLayout>
